                    "tags": ["Task Management"],
                    "summary": "Created a Task",
                    "description": "Endpoint to created a new tasks",
                    "parameters": [
                         {
                              "name": "Authorization",
                              "in": "header",
                              "description": "JWT token for Authentication",
