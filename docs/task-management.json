                                   "type": "string"
                              }
                         }
                    ],
                    "requestBody": {
                         "content": {
                              "application/json": {
                                   "schema": {
                                        "type": "object",
                                        "properties": {
                                             "title": {
                                                  "required": true,
                                                  "type": "string",
                                                  "maximum": 255,
                                                  "minimum": 1
                                             },
                                             "description": {
                                                  "required": false,
                                                  "type": "string",
                                                  "maximum": "500"
                                             },
                                             "dueData": {
                                                  "required": true,
                                                  "description": "String of number timestamp Unix Epoch",
                                                  "type": "string", 
                                                  "maximum": 30
                                             },
                                             "status": {
                                                  "required": true,
                                                  "description": "string of Enum",
                                                  "type": "string",
                                                  "enum": ["TODO", "PROGRES", "COMPLETED"]
                                             }
                                             
                                        }
                                   },
                                   "example": {
                                        "title": "Title of Task",
                                        "description": "Description of Task",
                                        "dueData": "1716646162267",
                                        "status": "PROGRESS"
                                   }
                              }
                         }
                    },
